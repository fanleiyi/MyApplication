<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.day09_03_property.MainActivity">

    <Button
        android:id="@+id/btn_1"
        android:onClick="doAlpha"
        android:text="消失吧，宝贝儿！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_2"
        android:layout_alignParentRight="true"
        android:onClick="doScale"
        android:text="放大吧，宝贝儿！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_3"
        android:layout_below="@+id/btn_1"
        android:onClick="doTrans"
        android:text="平移把，宝贝儿！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_4"
        android:onClick="doRotate"
        android:layout_below="@+id/btn_2"
        android:text="旋转吧，宝贝儿！"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_centerInParent="true"
        android:id="@+id/imageId"
        android:onClick="onImgClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
