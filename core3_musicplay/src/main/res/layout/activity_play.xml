<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="employee.karen.tarena.com.imusicmanager.PlayActivity">
    <include layout="@layout/include_actionbar_layout"
        android:id="@+id/actionBar_Play"
        />
    <employee.karen.tarena.com.imusicmanager.view.DiskView
        android:id="@+id/diskView_Play"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >
    </employee.karen.tarena.com.imusicmanager.view.DiskView>
    <RelativeLayout
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/imageView_Play_Favo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favo"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/imageView_Play_DownLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/download"
            />
    </RelativeLayout>
    <SeekBar
        android:max="100"
        android:paddingTop="10dp"
        android:id="@+id/seekBar_Play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/textView_Play_Current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:30"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/textView_Play_Duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:30"
            />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imageButton_Play_Previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/previous"

            />
        <ImageButton
            android:id="@+id/imageButton_Play_Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pause"

            />
        <ImageButton
            android:id="@+id/imageButton_Play_Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"

            />
    </LinearLayout>
</LinearLayout>
