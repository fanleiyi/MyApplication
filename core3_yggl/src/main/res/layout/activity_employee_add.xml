<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employee_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tarena.karen.employee.EmployeeAddActivity">

    <TextView
        android:text="添加员工"
        style="@style/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView11" />

    <TextView
        android:text="姓名:"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="28dp"
        android:id="@+id/textView12" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="输入姓名"
        android:ems="10"
        android:background="@drawable/edittext_bg"
        android:id="@+id/editText_Add_Name"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="薪水:"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_Add_Name"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginTop="25dp"
        android:id="@+id/textView13" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="输入薪水"
        android:ems="10"
        android:background="@drawable/edittext_bg"
        android:id="@+id/editText_Add_Salary"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignStart="@+id/editText_Add_Name" />

    <TextView
        android:text="年龄:"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_Add_Salary"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="25dp"
        android:id="@+id/textView14" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="输入年龄"
        android:ems="10"
        android:background="@drawable/edittext_bg"
        android:id="@+id/editText_Add_Age"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignStart="@+id/editText_Add_Salary" />

    <TextView
        android:text="性别:"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_Add_Age"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginTop="40dp"
        android:id="@+id/textView15" />

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignStart="@+id/editText_Add_Age"
        >
        <RadioButton
            android:id="@+id/radio_Male"
            android:text="男"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_Female"
            android:text="女"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:text="添加员工"
        android:onClick="add"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:id="@+id/button7" />


</RelativeLayout>
