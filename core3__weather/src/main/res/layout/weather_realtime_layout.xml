<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/textView_RealTime_Update"
        android:layout_marginTop="5dp"
        android:text="更新时间11:00:00"
        android:padding="10dp"
        android:background="#afafaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
        <com.natasa.progressviews.CircleSegmentBar
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/circle_RealTime_Temp"
            >
        </com.natasa.progressviews.CircleSegmentBar>

    <TextView
        android:id="@+id/textView_RealTime_WeekDay"
        android:layout_marginTop="5dp"
        android:text="星期五"
        android:padding="10dp"
        android:background="#afafaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/textView_RealTime_Condition"
        android:layout_marginTop="5dp"
        android:text="阴|空间质量:优"
        android:padding="10dp"
        android:background="#afafaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
</LinearLayout>
